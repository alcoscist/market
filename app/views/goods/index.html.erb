<p id="notice"><%= notice %></p>

<h1>Listing Goods</h1>

<table>
  <% @goods.each do |good| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
          <%= image_tag(good.image_url, class: 'list_image') %>
        </td>
        <td class="list_description">
          <dl>
            <dt><%= good.title %></dt>
            <dd><%= truncate(strip_tags(good.description),
                             length: 80) %></dd>
          </dl>
        </td>
        <td class="list_actions">
          <%= link_to 'Show', good %><br/>
          <%= link_to 'Edit', edit_good_path(good) %><br/>
          <%= link_to 'Destroy', good, method: :delete,
                      data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
  <% end %>
</table>
<br />
<%= link_to 'New good', new_good_path %>
